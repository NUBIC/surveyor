#surveyor
  #header
    .title= @title
  %br
  #survey_list
    %ul
      - unless @surveys.empty?
        - @surveys.each do |survey|
          %li
            - form_tag(take_survey_path(:survey_code => survey.access_code)) do 
              = survey.title
              &nbsp;
              = submit_tag("Take it" )
      - else
        %li
          No surveys